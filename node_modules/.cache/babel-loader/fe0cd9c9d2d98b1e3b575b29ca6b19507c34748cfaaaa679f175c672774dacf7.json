{"ast":null,"code":"/**\r\n * @description 根组件，定义整体布局结构\r\n */\nimport AppHeader from '@/components/layout/AppHeader.vue';\nimport AppSidebar from '@/components/layout/AppSidebar.vue';\nexport default {\n  name: 'App',\n  // 注册布局组件\n  components: {\n    AppHeader: AppHeader,\n    AppSidebar: AppSidebar\n  }\n};","map":{"version":3,"names":["AppHeader","AppSidebar","name","components"],"sources":["src/App.vue"],"sourcesContent":["<template>\r\n  <!-- \r\n    App.vue - 根组件\r\n    包含页面整体布局：头部 + 侧边栏 + 内容区\r\n  -->\r\n  <div id=\"app\" class=\"app-container\">\r\n    <!-- 页面头部 -->\r\n    <AppHeader />\r\n    \r\n    <!-- 主体区域 -->\r\n    <div class=\"app-main\">\r\n      <!-- 侧边栏导航 -->\r\n      <AppSidebar />\r\n      \r\n      <!-- 内容区域 -->\r\n      <main class=\"app-content\">\r\n        <!-- 路由视图：根据路由显示对应页面 -->\r\n        <router-view />\r\n      </main>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\n/**\r\n * @description 根组件，定义整体布局结构\r\n */\r\nimport AppHeader from '@/components/layout/AppHeader.vue'\r\nimport AppSidebar from '@/components/layout/AppSidebar.vue'\r\n\r\nexport default {\r\n  name: 'App',\r\n  \r\n  // 注册布局组件\r\n  components: {\r\n    AppHeader,\r\n    AppSidebar\r\n  }\r\n}\r\n</script>\r\n\r\n<style lang=\"scss\">\r\n// 应用容器\r\n.app-container {\r\n  min-height: 100vh;\r\n  display: flex;\r\n  flex-direction: column;\r\n}\r\n\r\n// 主体区域（侧边栏 + 内容）\r\n.app-main {\r\n  display: flex;\r\n  flex: 1;\r\n  padding-top: $header-height;\r\n}\r\n\r\n// 内容区域\r\n.app-content {\r\n  flex: 1;\r\n  margin-left: $sidebar-width;\r\n  padding: $spacing-xl;\r\n  min-height: calc(100vh - #{$header-height});\r\n  overflow-x: hidden;\r\n  \r\n  // 移动端适配\r\n  @media (max-width: $breakpoint-md) {\r\n    margin-left: 0;\r\n    padding: $spacing-md;\r\n  }\r\n}\r\n</style>\r\n"],"mappings":"AAwBA;AACA;AACA;AACA,OAAAA,SAAA;AACA,OAAAC,UAAA;AAEA;EACAC,IAAA;EAEA;EACAC,UAAA;IACAH,SAAA,EAAAA,SAAA;IACAC,UAAA,EAAAA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}